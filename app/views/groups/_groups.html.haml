.groupsContents
  .userInfo
    .userInfo__user
      =current_user.name
    .userInfo__btn
      =link_to "/groups/new", class: "userInfo__user userInfo__btn--newGroup" do
        =fa_icon 'edit', class: "userInfo__btn--icon"
      =link_to edit_user_path(current_user), class: "userInfo__user userInfo__btn--edit" do
        =fa_icon 'cog', class: "userInfo__btn--icon"
  .groups
    -current_user.groups.each do |group|
      .groups__list
        =link_to "/groups/#{group[:id]}/messages", class: "groups__list--title" do
          =group.name
        =link_to "/groups/#{group[:id]}/messages", class: "groups__list--top" do
          = group.messages.pluck(:message).last.nil?  ?  "まだメッセージがありません。"  :  "#{group.messages.pluck(:message).last}"