.groupsContents
  .userInfo
    .userInfo__user
      =current_user.name
    .userInfo__btn
      =link_to "/groups/new", class: "userInfo__user userInfo__btn--newGroup" do
        =fa_icon 'edit', class: "userInfo__btn--icon"
      =link_to edit_user_path(current_user), class: "userInfo__user userInfo__btn--edit" do
        =fa_icon 'cog', class: "userInfo__btn--icon"
  .groups
    -@groups.each do |group|
      .groups__list
        =link_to "groups/#{group[:id]}/messages", class: "groups__list--title" do
          =group.name
        =link_to "groups/#{group[:id]}/messages", class: "groups__list--top" do
          よろしくお願いします。
.contents
  .contents__header
    .contents__header__title
      サンプル
    .contents__header__member
      Member :
    .contents__header__edit
      =link_to "groups/#{:id}/edit", class:"contents__header__edit--link" do
        Edit
  .contents__messages
    .contents__messages__box
      .contents__messages__box__user
        ユーザー名
      .contents__messages__box__date
        2019/10/14 03:00
      .contents__messages__box__text
        Message

  .contents__post
    .contents__post__input
    %form
      %input{type:"text", name:"message", class:"contents__post__input", placeholder:"入力"}
      %label{for:"image-select"}
        =fa_icon 'image', class:"contents__post__input--image"
      %input{type:"file", name:"image", id:"image-select", style:"display:none;"}
      %input{type:"submit", class:"contents__post__input--submit", value:"投稿"}
